        <rule>
            <imp>
                <var>MidiFile</var>
                <not>
                    <var>Chordschema</var>
                </not>
            </imp>
        </rule>
        <rule>
            <imp>
                <var>Keyboard</var>
                <not>
                    <var>Loops</var>
                </not>
            </imp>
        </rule>
    </constraints>
    <calculations Auto="true" Constraints="true" Features="true" Redundant="true" Tautology="true"/>
